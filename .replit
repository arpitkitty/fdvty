modules = ["nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["unzip", "postgresql"]

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AICoach App"

[[workflows.workflow]]
name = "AICoach App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd AICoach && DATABASE_URL=\"postgresql://runner@localhost/aicoach?host=/tmp/postgresql\" npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "start"]
build = ["npm", "run", "build"]
